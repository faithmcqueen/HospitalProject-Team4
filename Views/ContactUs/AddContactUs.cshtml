@model List<HospitalProject_Team4.Models.MessageCategory>
@{
    ViewBag.Title = "AddContactUs";
}

<h2>Contact Us</h2>

<form method="POST" action="/ContactUs/AddContactUs" class="form-horizontal">

    <div class="form-group">
        <label for="first_name" class="col-sm-2">First Name: </label>
        <input id="first_name" type="text" name="first_name" class="col-sm-11" />
    </div>
    <div class="form-group">
        <label for="last_name" class="col-sm-2">Last Name: </label>
        <input id="last_name" type="text" name="last_name" class="col-sm-11" />
    </div>
    <div class="form-group">
        <label for="email" class="col-sm-2">Email: </label>
        <input id="email" type="text" name="email" class="col-sm-11" />
    </div>
    <div class="form-group">
        <label for="cell_phone" class="col-sm-2">Cell Phone: </label>
        <input id="cell_phone" type="text" name="cell_phone" class="col-sm-11" />
    </div>
    <div class="form-group">
        <label class="col-sm-2">Please select one Category: </label>
        <select id="category_id" type="text" name="category_id" class="col-sm-11">
            @{
                //A rendering loop to represent a list of brands
                foreach (var categories in Model)
                {
                    <option value="@categories.category_id">@categories.category_name</option>

                }
            }
        </select>
    </div>
    <div class="form-group">
        <label id="question" class="col-sm-2">Your Question:</label>
        <textarea id="question" name="question" rows="3" class="col-sm-11"></textarea>
    </div>
    <div>
        <input type="submit" value="Submit" class="btn btn-primary">
    </div>
</form>
